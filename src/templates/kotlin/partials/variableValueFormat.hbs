{{~#if (isEnum parameter.type)~}}
    {{~#if (isSpecialWord (camelcase parameter.name))~}}
        `{{~camelcase parameter.name~}}`.eventValue
    {{~else~}}
        {{~camelcase parameter.name~}}.eventValue
    {{~/if~}}
{{~else~}}
    {{~#if (isConst parameter.type)~}}
        "{{~parameter.type.Const~}}"
    {{~else~}}
        {{~#if (isSpecialWord (camelcase parameter.name))~}}
            `{{~camelcase parameter.name~}}`
        {{~else~}}
            {{~camelcase parameter.name~}}
        {{~/if~}}
    {{~/if~}}
{{~/if~}}
